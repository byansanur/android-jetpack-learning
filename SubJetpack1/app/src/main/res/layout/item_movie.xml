<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_margin="@dimen/all_margin"
    android:elevation="5dp"
    app:cardCornerRadius="@dimen/corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/imgPath"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@color/colorAccent"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/bg_text"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="@dimen/all_padding"
            android:paddingEnd="@dimen/all_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/imgPath"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="njfkabfkjabsncsdnc cjskdjksdk cjsdkfvkjdsfkvjds vjsdnvkjnsd nvsdnvks vnjskdvk"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>